import sys
from PyQt5.QtWidgets import QApplication, QWidget, QPushButton, QVBoxLayout, QHBoxLayout, QLineEdit, QFrame

class MiVentana(QWidget):
    def __init__(self):
        super().__init__()
        self.initUI()

    def initUI(self):
        # Crear botones para el lado derecho
        boton1 = QPushButton('Seguro de brazo')
        boton2 = QPushButton('Inicio de prensa')
        boton3 = QPushButton('Regreso')

        # Crear campos de texto
        campoTexto1 = QLineEdit()
        campoTexto2 = QLineEdit()
        campoTexto3 = QLineEdit()
        campoTexto4 = QLineEdit()

        # Crear un QFrame como contenedor para los campos de texto
        frameTextos = QFrame()
        frameTextos.setFrameShape(QFrame.StyledPanel)
        frameTextos.setLineWidth(1)

        # Crear layout vertical para los campos de texto dentro del QFrame
        vboxTextos = QVBoxLayout(frameTextos)
        vboxTextos.addWidget(campoTexto1)
        vboxTextos.addWidget(campoTexto2)
        vboxTextos.addWidget(campoTexto3)
        vboxTextos.addWidget(campoTexto4)

        # Crear layout vertical para los botones
        vboxBotones = QVBoxLayout()
        vboxBotones.addWidget(boton1)
        vboxBotones.addWidget(boton2)
        vboxBotones.addWidget(boton3)

        # Crear layout horizontal para toda la ventana
        hbox = QHBoxLayout(self)
        hbox.addWidget(frameTextos)
        hbox.addLayout(vboxBotones)

        self.setLayout(hbox)
        self.setWindowTitle('Corte manual')
        self.show()

def main():
    app = QApplication(sys.argv)
    ventana = MiVentana()
    sys.exit(app.exec_())

if __name__ == '__main__':
    main()
